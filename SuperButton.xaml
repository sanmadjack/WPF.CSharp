    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ComboBox Name="buttonOptions" SelectionChanged="buttonOptions_SelectionChanged" Width="20" HorizontalAlignment="Right" />
        <Button Name="button" Margin="0,0,0,0">
            <Button.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Image Stretch="Fill" Name="image" Margin="3"/>
                    <TextBlock Name="label" Margin="0,0,5,0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Grid>
            </Button.Content>
