<UserControl x:Class="SMJ.WPF.SuperButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:w="clr-namespace:SMJ.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="54" d:DesignWidth="143">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ComboBox Name="buttonOptions" SelectionChanged="buttonOptions_SelectionChanged" Width="20" HorizontalAlignment="Right"/>
        <Button Name="button" Margin="0,0,0,0">
            <Button.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Image Stretch="Fill" Name="image" Margin="5"/>
                    <TextBlock Name="label" Margin="0,0,5,0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Grid>
            </Button.Content>
        </Button>
    </Grid>
</UserControl>
